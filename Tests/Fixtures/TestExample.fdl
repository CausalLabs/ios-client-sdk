type NestedObject
{
    float1: Float!,
    int1: Int!
}

type TopLevelObject
{
    float1: Float!,
    float2: Float,
    enum1: Color!,
    enum2: Color
    string1: String!,
    string2: String,
    int1: Int!,
    int2: Int,
    nested1: NestedObject!,
    nested2: NestedObject,
}

type DumbObject
{
    a: Int!
}

